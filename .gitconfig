[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
    tool = meld
[merge]
    tool = meld
[alias]
	diffr = "!f() { git diff --color=always \"$@\" | diffr; }; f"
	showr = "!f() { git show --color=always \"$@\" | diffr; }; f"
    find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
    show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
    merges-between = "!f() { (echo '\nHASH\t\t\tDATE\t\t\tMERGER\t\t\tTITLE\n'; git log \"$1\"..\"$2\" --grep='See merge request' --pretty=format:'_MERGE__%h__%cr__%cn__%b' --reverse | awk -F__ '/_MERGE_/ {print $2 \"\t\t\t\" $3 \"\t\t\t\" $4 \"\t\t\t\" $5}'; echo) | column -ents $'\t'; }; f"

